{
  "name": "bruno-mcp-tools",
  "version": "0.1.1",
  "description": "MCP server exposing Bruno requests as tools",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "bruno-mcp-tools": "dist/index.js"
  },
  "files": [
    "dist/*.js",
    "dist/*.js.map",
    "dist/*.d.ts",
    "README.md",
    "LICENSE"
